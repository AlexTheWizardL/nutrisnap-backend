# Application
NODE_ENV=development
APP_PORT=3001
APP_URL=http://localhost:3001

# Database
DATABASE_TYPE=postgres
# For local development: localhost
# For Docker: postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USERNAME=root
DATABASE_PASSWORD=secret
DATABASE_NAME=nutrisnap
DATABASE_LOGGING=true

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# AI Provider for food image analysis
# Set AI_PROVIDER to 'claude' or 'openai' (auto-detects based on available keys if not set)
AI_PROVIDER=claude

# Claude/Anthropic API (recommended)
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-sonnet-4-20250514

# OpenAI API (alternative)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Google OAuth (optional)
GOOGLE_AUTH_ENABLED=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Mail
MAIL_HOST=mailcatcher
MAIL_PORT=1025
MAIL_SECURE=false
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM_NAME=NutriSnap
MAIL_FROM_EMAIL=noreply@nutrisnap.app

# Default locale
DEFAULT_LOCALE=en
